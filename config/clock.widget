#Api2

Private {

  include("cal.widget")

  widget_grid {
      label {
        value = Time(time_format)
        style ="clock"
        tooltip = Time(tooltip_format)
        action[0] = Function("XCalInit")
        action = Function("XCalPopUp")
      }
  }
}

#CSS

label#clock {
  padding-left: 2px;
  padding-right: 2px;
  -GtkWidget-vexpand: true;
  -GtkWidget-valign: center;
}


#Api2

Module("idleinhibit");

Private {
  Var IconOn = "icons/misc/lock.svg";
  Var IconOff = "icons/misc/unlock.svg";

  layout {
    button {
      style = If(Ident(IdleInhibitState), "module", "hidden")
      value = If(IdleInhibitState()="on", IconOn, IconOff)
      local = true
      trigger = "idleinhibitor"
      action[1] = SetIdleInhibitor("toggle")
    }
  }
}
